---
apiVersion: v1
kind: ServiceAccount
metadata:
  labels:
    machineremediation.kubevirt.io: ""
  name: machine-remediation
  namespace: {{.Namespace}}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  labels:
    machineremediation.kubevirt.io: ""
  name: machine-remediation
rules:
- apiGroups:
  - machine.openshift.io
  resources:
  - machines
  verbs:
  - get
  - list
  - watch
- apiGroups:
  - machineremediation.kubevirt.io
  resources:
  - machineremediations
  - machineremediations/status
  verbs:
  - create
  - delete
  - get
  - list
  - update
  - watch
- apiGroups:
  - ""
  resources:
  - nodes
  verbs:
  - delete
  - get
  - list
  - watch
- apiGroups:
  - metal3.io
  resources:
  - baremetalhosts
  verbs:
  - get
  - list
  - update
  - watch
- apiGroups:
  - ""
  resources:
  - configmaps
  verbs:
  - '*'
- apiGroups:
  - ""
  resources:
  - events
  verbs:
  - create
  - list
  - watch
  - patch
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  labels:
    machineremediation.kubevirt.io: ""
  name: machine-remediation
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: machine-remediation
subjects:
- kind: ServiceAccount
  name: machine-remediation
  namespace: {{.Namespace}}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    machineremediation.kubevirt.io: machine-remediation
  name: machine-remediation
  namespace: {{.Namespace}}
spec:
  replicas: 1
  selector:
    matchLabels:
      machineremediation.kubevirt.io: machine-remediation
  strategy:
    type: RollingUpdate
  template:
    metadata:
      labels:
        machineremediation.kubevirt.io: machine-remediation
    spec:
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: machineremediation.kubevirt.io
                  operator: In
                  values:
                  - machine-remediation
              topologyKey: kubernetes.io/hostname
            weight: 50
      containers:
      - args:
        - --logtostderr=true
        - --v={{.Verbosity}}
        - --namespace={{.Namespace}}
        command:
        - /usr/bin/machine-remediation
        image: {{.ImageMachineRemediation}}
        imagePullPolicy: {{.ImagePullPolicy}}
        name: machine-remediation
        resources:
          requests:
            cpu: 10m
            memory: 20Mi
      nodeSelector:
        node-role.kubernetes.io/master: ""
      securityContext:
        runAsNonRoot: true
      serviceAccountName: machine-remediation
      tolerations:
      - effect: NoSchedule
        key: node-role.kubernetes.io/master
      - key: CriticalAddonsOnly
        operator: Exists
      - effect: NoExecute
        key: node.kubernetes.io/not-ready
        operator: Exists
        tolerationSeconds: 120
      - effect: NoExecute
        key: node.kubernetes.io/unreachable
        operator: Exists
        tolerationSeconds: 120
